{
  "name": "@bookmarks-index/server",
  "type": "module",
  "scripts": {
    "dev": "bun --preload ./src/instrument.ts --watch src/index.ts",
    "build": "bun build src/index.ts src/instrument.ts --outdir dist --target bun --sourcemap=external",
    "start": "bun --preload ./dist/instrument.js dist/index.js",
    "tsc": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject ./dist && sentry-cli sourcemaps upload --release=$APP_VERSION ./dist"
  },
  "dependencies": {
    "@clerk/backend": "^1.0.0",
    "@hono/trpc-server": "^0.3.0",
    "@sentry/bun": "^10.32.1",
    "@trpc/server": "^11.0.0",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.0.0",
    "postgres": "^3.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@sentry/cli": "^2.40.0",
    "@types/bun": "latest",
    "drizzle-kit": "^0.30.0"
  }
}
