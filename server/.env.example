# Database
# For local development:
DATABASE_URL=postgres://user:password@localhost:5432/bookmarks
# For production (internal Docker network):
# DATABASE_URL=postgres://bookmarks_app:PASSWORD@supabase-db-lowoco8g0ow8okosoooogk4o:5432/postgres

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxxxx

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS - Allowed origins (comma-separated)
# For production, use Chrome extension ID: chrome-extension://your-extension-id
# For development, leave empty or use: http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173

# Migrations - Set to 'true' to run migrations on server startup
RUN_MIGRATIONS=false

# App Version (set by CI/CD or leave empty)
APP_VERSION=

# Logging Configuration
# Log level: debug | info | warn | error
# Defaults to 'info' in production, 'debug' in development
LOG_LEVEL=debug

# Enable file logging: true | false
# Defaults to true in production, false in development
LOG_TO_FILE=false

# Log directory path
# Defaults to './logs' in development, '/app/logs' in production
LOG_DIR=./logs

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/<project>/keys/
SENTRY_DSN=
